<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit source_of_supply</h1>
    <% if @source_of_supply.persisted? %>
    <%= button_to 'Destroy', @source_of_supply, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', source_of_supply: @source_of_supply %>
</div>
